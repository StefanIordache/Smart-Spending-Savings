<div class="modal-header">
  <h4 class="modal-title" id="myModalLabel"><%= t('expenses.view_expense') %></h4>
  <button type="button" class="close" data-dismiss="modal">x</button>
</div>
<div class="modal-body">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xs-offset-0 col-sm-offset-0 col-md-offset-0 col-lg-offset-0 toppad">
        <div class="panel panel-info">
          <div class="panel-heading">
            <h3 class="panel-title"><%= @expense.title %></h3>
          </div>
          <div class="panel-body">
            <div class="row">
              <div class=" col-md-12 col-lg-12 ">
                <table class="table table-user-information">
                  <tbody>
                  <tr>
                    <td><%= t('expenses.amount') %></td>
                    <td><%= @expense.amount.to_s + ' ' + @expense.currency.to_s.humanize.upcase %></td>
                  </tr>
                  <tr>
                    <td><%= t('expenses.expense_date') %></td>
                    <td><%= @expense.expense_date %></td>
                  </tr>
                  <tr>
                    <td><%= t('expenses.description') %></td>
                    <td><%= @expense.description %></td>
                  </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>