<% if @report.errors.any? %>
  <script>
      $(function () {
          toastr.options = {"timeOut": "5000"};

          <% @report.errors.full_messages.each do |msg| %>
          toastr.error('<%= msg %>');
          <% end %>

          toastr.error('The form contains <%= pluralize(@report.errors.count, "error") %>.');
      });
  </script>
<% end %>