<div class="jumbotron jumbotron-title">
  <h2 class="display-4">View Report</h2>
</div>

</br>
</br>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad">


      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title"><%= @report.title %></h3>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class=" col-md-12 col-lg-12 ">
              <table class="table table-user-information">
                <tbody>
                <tr>
                  <td>From Date:</td>
                  <td><%= @report.from_date %></td>
                </tr>
                <tr>
                  <td>To date:</td>
                  <td><%= @report.to_date %></td>
                </tr>
                <tr>
                  <td>Currency:</td>
                  <td><%= @report.currency.to_s.humanize.upcase %></td>
                </tr>
                <tr>
                  <td>Description:</td>
                  <td><%= @report.description %></td>
                </tr>

                </tbody>
              </table>

              <%= link_to "Back to My Reports", action: "index", class: "btn btn-primary" %>
            </div>
          </div>
        </div>
        <div class="panel-footer">
          <%= link_to edit_report_path(@report), class: "btn btn-sm btn-info" do%>
            <i class="fas fa-edit"></i>
          <% end %>
          <span class="pull-right">
            <%= link_to report_path(@report), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" do %>
                  <i class="fas fa-trash-alt"></i>
            <% end %>
          </span>
        </div>

      </div>
    </div>
  </div>
</div>

<%= pie_chart @report.expenses.group(:currency).count %>

<div class="jumbotron jumbotron-title">
  <h2 class="display-4">Report Expenses</h2>
</div>

<div class="table-container">
  </br>

  <table id="expenses_table" class="container">
    <thead>
    <tr>
      <th><h1>Expense Title</h1></th>
      <th><h1>Amount</h1></th>
      <th><h1>Date</h1></th>
      <th><h1>Description</h1></th>
      <th><h1>Actions</h1></th>
    </tr>
    </thead>
    <tbody>
    <% @report.expenses.each do |expense| %>
      <tr>
        <td><%= link_to expense.title, expense_path(expense) %></td>
        <td><%= expense.amount %></td>
        <td><%= expense.expense_date %></td>
        <td><%= expense.description %></td>
        <td>
          <%= link_to :action => "remove_expense_from_report",
                      :report_id => @report.id, :expense_id => expense.id,
                      data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>


<script type="text/javascript">

    $(document).ready(function() {
        $('#expenses_table').DataTable();
    });

</script>

