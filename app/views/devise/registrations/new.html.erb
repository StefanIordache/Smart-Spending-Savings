<div class="wrapper fadeInDown">
  <div id="formContent">
    <!-- Tabs Titles -->

    <!-- Icon -->
    <div class="fadeIn first">
      <h1><%= t("home.sign_up") %></h1>
    </div>

    </br>
    </br>

    <!-- Login Form -->
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <div class="row w-70-centered" >
        <div class="form-group">
          <label for="email">
            <%= t('home.email_address') %></label>
          <%= f.input_field :email,
                            required: true,
                            autofocus: true,
                            input_html: {autocomplete: "email"},
                            class: "form-control field-with-errors fadeIn second",
                            label: false %>
        </div>
      </div>

      <div class="row w-70-centered">
        <div class="form-group">
          <label for="password">
            <%= t('home.password') %></label>
          <%= f.input_field :password,
                            required: true,
                            hint: (t('devise.shared.minimum_password_length', count: @minimum_password_length) if @minimum_password_length),
                            input_html: {autocomplete: "new-password"},
                            class: "form-control field-with-errors fadeIn third",
                            label: false %>
        </div>
      </div>

      <div class="row w-70-centered">
        <div class="form-group">
          <label for="remember-me">
            <%= t('home.remember_me') %></label>
          <%= f.input_field :password_confirmation,
                            required: true,
                            input_html: {autocomplete: "new-password"},
                            class: "form-control field-with-errors fadeIn fourth",
                            label: false %>
        </div>
      </div>

      <div class="col-md-12 text-center mb-3">
        <div class="form-group">
          <%= f.button :submit, t(".sign_up"), class: "fadeIn fifth" %>
        </div>
      </div>
    <% end %>

    <div id="formFooter">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>

<%= stylesheet_link_tag "styles/devise" %>